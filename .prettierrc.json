{
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 125,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false,
          "explicitTypes": "preserve"
        }
      },
      {
        "files": ["*.ts", "*.md"],
        "options": {
          "printWidth": 100,
          "semi": true,
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "es5"
        }
      },
      {
        "files": ["*.ts", "*.json"],
        "options": {
          "useTabs": true
        }
      },
      {
        "files": "*.md",
        "options": {
          "useTabs": false
        }
      }
    ]
  }